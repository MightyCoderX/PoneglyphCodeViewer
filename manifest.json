{
    "manifest_version": 3,
    "name": "JSON Highlighter",
    "version": "0.0.1",
    "description": "JSON Code Highlighter using monaco-editor",
    "icons": {
        "16": "icons/json-16.png",
        "32": "icons/json-32.png",
        "48": "icons/json-48.png",
        "128": "icons/json-128.png"
    },

    "content_scripts":
    [
        {
            "matches": ["*://*/*"],
            "js": [ "highlighter.js" ]
        }
    ],

    "web_accessible_resources": [
		{
            "resources": ["lib/*", "editor/*"],
            "matches": ["*://*/*"]
        }
	],

    "host_permissions": ["<all_urls>"]
}