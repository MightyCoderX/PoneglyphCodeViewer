{
    "manifest_version": 3,
    "name": "JSON Highlighter",
    "version": "1.0.0",
    "description": "JSON Code Highlighter using monaco-editor",
    "icons": {
        "128": "icons/json.svg"
    },

    "content_scripts":
    [
        {
            "matches": ["*://*/*"],
            "js": [ "highlighter.js" ]
        }
    ],

    "web_accessible_resources": [
		{
            "resources": ["lib/*", "editor/*"],
            "matches": ["*://*/*"]
        }
	],

    "host_permissions": ["<all_urls>"]
}